@model UserVM;
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoneyFlow</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body class="bg-body-secondary">
    <div class="container">
        <div class="row justify-content-center align-items-center vh-100">
            <div class="col-sm-6 col-lg-4">
                <div class="card show">
                    <div class="card-body p-4">
                        <h2 class="card-title mb-4 text-center">Registro</h2>
                        <form asp-controller="Account" asp-action="Register" method="post">
                            <div class="mb-3">
                                <label for="exampleFormControlInput1" class="form-label">Nombre Completo</label>
                                <input type="text" class="form-control" id="exampleFormControlInput1" asp-for="FullName">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlInput2" class="form-label">Email</label>
                                <input type="email" class="form-control" id="exampleFormControlInput2" asp-for="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlInput3" class="form-label">Contraseña</label>
                                <input type="password" class="form-control" id="exampleFormControlInput3" asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label for="exampleFormControlInput4" class="form-label">Repetir contraseña</label>
                                <input type="password" class="form-control" id="exampleFormControlInput4" asp-for="RepeatPassword">
                                <span asp-validation-for="RepeatPassword" class="text-danger"></span>
                            </div>

                            @if (ViewBag.message != null)
                            {
                                <div class="alert @ViewBag.Class" role="alert">
                                    @ViewBag.message
                                </div>
                            }

                            <div class="d-grid mb-3">
                                <button class="btn btn-primary" type="submit">Registrar</button>
                            </div>
                            <div class="d-grid mb-3">
                                <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">Retornar</a>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>
